---
const repo = 'Jeffallan/writing-with-agents';
---

<div class="social-icons">
  <a href={`https://github.com/${repo}`} rel="me" class="star-button sl-flex" target="_blank">
    <svg aria-hidden="true" width="16" height="16" viewBox="0 0 16 16" fill="currentColor">
      <path
        d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.013 8.013 0 0016 8c0-4.42-3.58-8-8-8z"
      ></path>
    </svg>
    <span class="star-label">Stars</span>
    <span class="star-count" id="star-count"></span>
  </a>
</div>

<script is:inline define:vars={{ repo }}>
  fetch(`https://api.github.com/repos/${repo}`)
    .then((r) => r.json())
    .then((data) => {
      const el = document.getElementById('star-count');
      if (el && data.stargazers_count != null) {
        const count = data.stargazers_count;
        el.textContent = count >= 1000 ? (count / 1000).toFixed(1) + 'k' : String(count);
      }
    })
    .catch(() => {});
</script>

<style>
  .social-icons {
    display: flex;
    align-items: center;
    gap: 0.5em;
  }
  .star-button {
    display: inline-flex;
    align-items: center;
    gap: 0.4em;
    color: var(--sl-color-text-accent);
    border: 1px solid var(--sl-color-gray-4);
    border-radius: 2rem;
    padding: 0.3em 0.75em;
    font-size: var(--sl-text-xs);
    font-weight: 600;
    text-decoration: none;
    white-space: nowrap;
    transition:
      border-color 0.15s,
      background 0.15s;
  }
  .star-button:hover {
    border-color: var(--sl-color-accent);
    background: var(--sl-color-accent-low);
  }
  .star-label {
    line-height: 1;
  }
  .star-count {
    color: var(--sl-color-text);
    font-variant-numeric: tabular-nums;
  }
  .star-count:empty {
    display: none;
  }
</style>
